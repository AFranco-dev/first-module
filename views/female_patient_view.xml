<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- tree view -->
    <record id="hospital_patient_tree_view" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Patient Name"/>
                <field name="age" string="Age"/>
                <field name="gender" string="Gender"/>
                <field name="ref"/>
            </tree>
        </field>
    </record>
    <!-- form view -->
    <record id="hospital_patient_form_view" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                           <field name="name"/>
                           <field name="age"/>
                           <field name="active" invisible="1"/>
                        </group>
                        <group>
                           <field name="gender"/>
                           <field name="ref"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- SEARCH VIEW -->
    <record id="hospital_patient_search_view" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Patient Name"  filter_domain="['|', ('name', 'ilike', self), ('ref','ilike', self)]"/>
                <field name="ref"/>
                <field name="age"/>
                <field name="gender"/>
                <filter name="filter_male" string="Male" domain="[('gender', '=', 'male')]"/>
                <separator/>
                <filter name="filter_female" string="Female" domain="[('gender', '=', 'female')]"/>
                <separator/>
                <filter name="filter_age" string="Kids" domain="[('age', '&lt;=', 5)]"/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter string="Gender" name="group_by_gender" context="{'group_by': 'gender'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- PATIENT VIEW ACTION -->
    <record id="hospital_female_patient_action" model="ir.actions.act_window">
        <field name="name">Patient Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[('gender', '=', 'female')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first female patient!
            </p>
        </field>
    </record>
</odoo>